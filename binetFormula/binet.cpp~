#include <cmath>
#include <binet.h>

double GLD = 2.236068;

Binet::Binet(double n) : _n(0)
{
  _n = n;
};

int Binet::round(double n)
{
  double x = ((Binet::run(n)) + 0.5);
  int y = static_cast<int>(x);

  return y;
  
}

void Binet::setN(double n)
{
  _n = n;

}


double Binet::run(double n)
{

  double fib = 0.0;
  fib = ( (pow(( 1 + GLD ), _n) - pow(( 1 - GLD ), n)) / (pow( 2, _n) * GLD));

  return fib;
}

